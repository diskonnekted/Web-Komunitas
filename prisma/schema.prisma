generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Post {
  id        String   @id @default(cuid())
  title     String
  content   String?
  published Boolean  @default(false)
  authorId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Admin model for authentication
model Admin {
  id        String   @id @default(cuid())
  username  String   @unique
  password  String
  name      String
  email     String?  @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Community categories
enum CommunityCategory {
  PERTANIAN
  EKONOMI
  DIGITAL
  OLAHRAGA
  KESEHATAN
  RELIGI
  SOSIAL
  BUDAYA
  KELUARGA
  PEMUDA
  PENDIDIKAN
  INOVASI
  LINGKUNGAN
  LAINNYA
}

// Community model
model Community {
  id          String             @id @default(cuid())
  name        String
  slug        String             @unique
  description String
  category    CommunityCategory
  contact     String?
  email       String?
  phone       String?
  address     String?
  logo        String?
  isActive    Boolean            @default(true)
  createdAt   DateTime           @default(now())
  updatedAt   DateTime           @updatedAt
  
  // Relations
  activities  Activity[]
  gallery     Gallery[]
  members     CommunityMember[]
  
  @@map("communities")
}

// Community members
model CommunityMember {
  id           String   @id @default(cuid())
  communityId  String
  name         String
  email        String?
  phone        String?
  position     String?
  joinDate     DateTime @default(now())
  
  community    Community @relation(fields: [communityId], references: [id], onDelete: Cascade)
  
  @@map("community_members")
}

// Activity/Event model
model Activity {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  description String
  startDate   DateTime
  endDate     DateTime
  location    String?
  address     String?
  latitude    Float?
  longitude   Float?
  communityId String
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  community   Community @relation(fields: [communityId], references: [id], onDelete: Cascade)
  gallery     Gallery[]
  
  @@map("activities")
}

// News/Announcement model
model News {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  content     String
  excerpt     String?
  image       String?
  isPublished Boolean  @default(false)
  publishedAt DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@map("news")
}

// Gallery model
model Gallery {
  id          String      @id @default(cuid())
  title       String?
  description String?
  fileUrl     String
  fileType    String      // 'image' or 'video'
  communityId String?
  activityId  String?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  
  community   Community?  @relation(fields: [communityId], references: [id], onDelete: Cascade)
  activity    Activity?   @relation(fields: [activityId], references: [id], onDelete: Cascade)
  
  @@map("gallery")
}

// Location model for activity places
model Location {
  id        String   @id @default(cuid())
  name      String
  address   String
  latitude  Float
  longitude Float
  type      String?  // 'lapangan', 'balai', 'masjid', etc.
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@map("locations")
}

// Community request status
enum RequestStatus {
  PENDING
  APPROVED
  REJECTED
}

// Community registration requests
model CommunityRequest {
  id          String             @id @default(cuid())
  name        String
  description String
  category    CommunityCategory
  contact     String
  email       String?
  phone       String?
  address     String?
  reason      String
  status      RequestStatus      @default(PENDING)
  createdAt   DateTime           @default(now())
  updatedAt   DateTime           @updatedAt
  
  @@map("community_requests")
}